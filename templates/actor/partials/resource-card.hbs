<div class="resource-card">
    <div class="flexcol {{toLowerCase r}}">
        <label for="{{inputName}}" title="{{title}}">
            <i class="{{icon}}"></i>{{r}} {{#if_not_eq actor.type "npc"}}<i
                class="fas fa-solid fa-rotate-left resource-reset" title="{{localize 'FU.UI.reset'}}"
                data-target="{{actor._id}}" data-resource="{{toLowerCase r}}"></i>{{/if_not_eq}}
        </label>
        <input name="{{inputName}}" type="text" data-dtype="Number" value="{{rValue}}" />
        <p>{{rMax}}</p>
        {{#if_eq r "hp"}}
        <span class="{{toLowerCase r}} crisis">
            <p>
                <i class="fas fa-solid fa-heart-pulse"></i>{{localize "FU.Status.crisis"}}:
                {{crisis}}
            </p>
        </span>
        {{/if_eq}}
    </div>
</div>